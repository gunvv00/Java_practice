package practice;

public class middleTest3 {

	public static void main(String[] args) {

		int[] arr = new int[20];
		String hol = "";
		String jjak = "";
		System.out.println("임의의 수 생성");

		for (int i = 0; i < arr.length; i++) {
			arr[i] = (int) (Math.random() * 100);
			System.out.print(arr[i] + " ");
		}
		System.out.println();

		for (int i = 0; i < arr.length; i++) {
			if (i % 2 != 0) {
				hol += arr[i] + "\t";
			} else {
				jjak += arr[arr.length - (i+1)]  + "\t";
			}
		}
		System.out.print("홀수 인덱스 : " + hol);
	}

}
