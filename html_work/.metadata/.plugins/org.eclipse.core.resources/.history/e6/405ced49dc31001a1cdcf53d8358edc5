package classPractice;

import java.util.*;

public class Ex01 {

	public static void main(String[] args) {
		
		Scanner scv = new Scanner(System.in);
		
		System.out.println("상품명을 입력하시오 : ");
		String name = scv.nextLine();
		
		System.out.println("가격을 입력하시오 : ");
		int price= scv.nextInt();
		
		System.out.println("수량을 입력 하시오 : ");
		int amount= scv.nextInt();
		
		int sum = price * amount;
		
		System.out.println(name+ "" + amount + "개"+ "" + sum + "만원");
		

	}

}
