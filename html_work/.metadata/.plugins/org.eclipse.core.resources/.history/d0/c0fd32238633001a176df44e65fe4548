package classPractice;

import java.util.*;

public class IfEx1 {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("먹고 싶은 음식을 고르시오");
		System.out.println("1.짜장,2.탕수육,3.칠리새우,4.크림새우");
		int menu = input.nextInt();
		
		if(menu == 1) {
			System.out.println("짜장면을 시키셨습니다.");
		}else if(menu == 2) {
			System.out.println("탕수육을 시키셨습니다.");
		}else if(menu == 3) {
			System.out.println("칠리새우를 시키셨습니다.");
		}else if(menu == 4) {
			System.out.println("크림새우를 시키셨습니다.");
		}else {
			System.out.println("주문을 잘못 하셨습니다.");
		}
		

	}

}
